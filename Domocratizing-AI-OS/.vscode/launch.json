{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Kernel (QEMU)",
            "type": "gdb",
            "request": "attach",
            "executable": "target/aarch64-unknown-none/debug/kernel",
            "target": ":1234",
            "remote": true,
            "cwd": "${workspaceRoot}",
            "gdbpath": "aarch64-none-elf-gdb",
            "autorun": [
                "set arch aarch64",
                "set substitute-path /rustc/... ${env:HOME}/.rustup/toolchains/nightly-aarch64-unknown-none",
                "add-symbol-file target/aarch64-unknown-none/debug/kernel",
                "monitor system_reset",
                "tb kernel_main",
                "c"
            ],
            "preLaunchTask": "debug-qemu",
            "presentation": {
                "hidden": false,
                "group": "Debug",
                "order": 1
            }
        },
        {
            "name": "Debug Tests",
            "type": "gdb",
            "request": "launch",
            "target": "target/aarch64-unknown-none/debug/deps/${input:testName}",
            "cwd": "${workspaceRoot}",
            "gdbpath": "aarch64-none-elf-gdb",
            "autorun": [
                "set arch aarch64",
                "tb main",
                "c"
            ],
            "preLaunchTask": "build",
            "presentation": {
                "hidden": false,
                "group": "Debug",
                "order": 2
            }
        },
        {
            "name": "Debug Unit Tests",
            "type": "gdb",
            "request": "launch",
            "target": "target/aarch64-unknown-none/debug/deps/${input:unitTestName}",
            "cwd": "${workspaceRoot}",
            "gdbpath": "aarch64-none-elf-gdb",
            "autorun": [
                "set arch aarch64",
                "tb main",
                "c"
            ],
            "preLaunchTask": "build",
            "presentation": {
                "hidden": false,
                "group": "Debug",
                "order": 3
            }
        }
    ],
    "inputs": [
        {
            "id": "testName",
            "type": "promptString",
            "description": "Name of the test binary to debug",
            "default": "test_binary"
        },
        {
            "id": "unitTestName",
            "type": "promptString",
            "description": "Name of the unit test binary to debug",
            "default": "unit_test_binary"
        }
    ],
    "compounds": [
        {
            "name": "Debug All",
            "configurations": [
                "Debug Kernel (QEMU)",
                "Debug Tests",
                "Debug Unit Tests"
            ],
            "presentation": {
                "hidden": false,
                "group": "Debug",
                "order": 4
            }
        }
    ]
}
